#include <stdio.h>

int i;
void increment(void);
void decrement(void);
int main(void)
{
    printf("i = %d\n", i);
    increment();
    increment();
    increment();
    decrement();
    decrement();
    decrement();
}
void increment(void)
{
    i = i + 1;
    printf("On incrementing i = %d\n", i);
}
void decrement(void)
{
    i = i - 1;
    printf("On decrementing i = %d\n", i);
}
